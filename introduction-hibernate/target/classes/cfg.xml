<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
    <hibernate-configuration>
    <session-factory>
        <!--La base de datos a la que nos vamos a conectar en este caso mysql-->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--La ruta de conexión a esa Base de datos, si tenemos un puerto diferente al de por defecto
        cambiamos localhost por localhost:puerto-->
        <property name="connection.url">jdbc:mysql://localhost/utp_grupo_24</property>
        <!--Credenciales de acceso-->
        <property name="connection.username">root</property>
        <property name="connection.password">951230Sim@n</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <!--Nos imprime las consutlas, como estamos ensayando es útil, después no tanto-->
        <property name="hibernate.show_sql">true</property>
    </session-factory>
</hibernate-configuration>